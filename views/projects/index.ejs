<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Projects manager!!!</h1>
            <p>Manage your projects...</p>
            <p>
                <a class="btn btn-primary btn-lrg" href="/projects/new">Add New Project</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% projects.forEach(function(project){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail" style="margin: 5px 0;">
                    <image src="<%= project.image %>" style="width: 100%;"></image> 
                    <div class="caption">
                        <h4><%= project.name %></h4>
                    </div>
                    <p>
                        <a href="/projects/<%= project._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>